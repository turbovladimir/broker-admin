<a id="push-link" type="button" href="{{ push is defined ? push.target : '#' }}" target="_blank">
    <div class="toast gradient-green shadow border-0" role="alert" aria-live="assertive" aria-atomic="true"
            {% if edit_action is defined %}
                style="display: flex"
            {% endif %}
    >
        <div class="toast-body">
            <span class="blink" id="push-text">{{ push is defined ? push.text : '' }}</span>
        </div>
    </div>
</a>
<audio id="push_audio" muted>
    <source src="{{ asset('content/sound/push.wav') }}" type="audio/wav">
    Your browser does not support the audio element.
</audio>