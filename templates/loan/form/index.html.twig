{% extends '@loan/base.html.twig' %}
{% set title = 'Получить заем' %}
{% block container %}
    {{ parent() }}
    <div class="container form_container">
        <div class="row mt-2 align-items-center">
            <div class="col-10">
                <h3>Для получения займа</h3>
                <h3>заполните анкету</h3>
            </div>
            <div class="col-2">
                <img src="{{ asset('content/img/loan/step2.svg') }}">
            </div>
        </div>
            {{ form_start(form) }}
        <div class="form_errors">
            {{ form_errors(form) }}
        </div>
        <div id="form_part_1">
            <div class="row mt-2 align-items-center">
                <div class="col">
                    {{ form_row(form.surname) }}
                </div>
                <div class="col" id="some-custom-id">
                    {{ form_row(form.name) }}
                </div>
            </div>
            <div class="row mt-2 align-items-center">
                <div class="col" id="some-custom-id">
                    {{ form_row(form.patron) }}
                </div>
                <div class="col">
                    {{ form_row(form.phone) }}
                </div>
            </div>
            <div class="row mt-2 align-items-center">
                <div class="col" id="some-custom-id">
                    {{ form_row(form.birth) }}
                </div>
                <div class="col" id="some-custom-id">
                    {{ form_row(form.email) }}
                </div>
            </div>
            <div class="row mt-2 align-items-center">
                <div class="col">
                    <img onclick="FormContinue()" class="rounded mx-auto d-block" src="{{ asset('content/img/loan/but_cont.svg') }}">
                </div>
            </div>
        </div>
        <div id="form_part_2" class="collapse">
            <div class="row mt-2 align-items-center">
                <div class="col">
                    {{ form_row(form.passportSeries) }}
                </div>
                <div class="col">
                    {{ form_row(form.passportNumber) }}
                </div>
            </div>
            <div class="row mt-2 align-items-center">
                <div class="col">
                    {{ form_row(form.departmentCode) }}
                </div>
                <div class="col">
                    {{ form_row(form.issueDate) }}
                </div>
            </div>
            <div class="row mt-2 align-items-center">
                <div class="col">
                    {{ form_row(form.region) }}
                </div>
                <div class="col">
                    {{ form_row(form.city) }}
                </div>
            </div>
        </div>
            {{ form_end(form) }}
    </div>
    <script>
        function FormContinue() {
            document.getElementById("form_part_2").classList.remove("collapse");
            document.getElementById("form_part_1").classList.add("collapse");
        }
    </script>
{% endblock %}
