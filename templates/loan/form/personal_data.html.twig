            {{ form_row(form.surname) }}
        </div>
        <div class="col">
            {{ form_row(form.name) }}
        </div>
    </div>
    <div class="row mt-2 align-items-center">
        <div class="col-6">
            {{ form_row(form.patron) }}
        </div>
