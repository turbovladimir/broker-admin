<div class="offer_wrap vh-lg-100" {% if edit_action is not defined %} style="display: none;" {% endif %}>
    <div class="row row-cols-1 justify-content-center">
        <div class="col-auto p-sm-3 show_async">
            <h4>Вот что мы подобрали специально для вас</h4>
        </div>
        <div class="container-fluid row row-cols-sm-1 row-cols-lg-4 mb-3 g-4">
            {% for offer in offers %}
                <div class="col {{ offer is not null and offer.isActive == false ? 'inactive' : '' }}">
                    {% include '@admin/offer/offer_card.html.twig' with {'offer': offer} %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>