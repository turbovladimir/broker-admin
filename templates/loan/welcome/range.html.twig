            </div>
            {% if is_mobile() == false %}
                <div class="col">
                    <img class="img-fluid" src="{{ asset('content/img/loan/welcome.svg') }}">
                </div>
            {% endif  %}
        </div>
    </div>
    <div class="col-2"></div>
